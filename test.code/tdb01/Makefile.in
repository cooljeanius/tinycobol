prefix=@prefix@
exec_prefix=@exec_prefix@
g_includes=@g_includes@
g_libraries=@g_libraries@

SHELL=/bin/sh
CCX=@CCX@
COB=@COB@
ASM=@ASM@
RM=rm -f

EXEEXT=@exeext@

COPYBOOKS=@COPYBOOKS@
INCLUDES=@INCLUDES@
CCXFLAGS=@CCXFLAGS@
LIBS=@LIBS@
EXTRALIBS=
LDFLAGS=@LDFLAGS@
COBFLAGS=@COBFLAGS@
ASMFLAGS=@ASMFLAGS@

SRC01 = tdb01a.cob 
SRC02 = tdb01.c

OBJ01 = $(SRC01:.cob=.o)
OBJ02 = $(SRC02:.c=.o)
OBJS  = $(OBJ01) $(OBJ02)

PROG01 = tdb01$(EXEEXT)
PROGS = $(PROG01)

#include ${prefix}/config/C.rules.in
#include ${prefix}/config/COB.rules.in
#
# Rules for compiling .c sources
.SUFFIX: .c .o
.c.o:
	$(CCX) $(CCXFLAGS) -c $<

# Rules for compiling COBOL sources
#
.SUFFIXES: .cob .cbl .o
%.o: %.cob
	$(COB) -c $(COBFLAGS) $<
%.o: %.cbl
	$(COB) -c $(COBFLAGS) $<


all: ${PROGS}

${PROG01}: ${OBJS}
	$(CCX) -g -o $@ ${OBJS} $(LDFLAGS) $(LIBS)
#	strip $@

clean:
	@${RM} $(PROGS) ${OBJS} *.lis *.s *.i *.exe core dbdat*
